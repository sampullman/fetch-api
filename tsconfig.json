{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist/esm",
    "lib": ["ESNext", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "inlineSourceMap": false,
    "baseUrl": "lib",
    "rootDir": "lib",
    "sourceRoot": "/lib/",
    "sourceMap": true,
    "listEmittedFiles": false,
    "listFiles": false,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": true,
    "types": ["node", "jest"]
  },
  "include": ["lib"],
  "exclude": [
    "**/node_modules",
    "**/example",
    "**/tools/*",
    "**/test/*",
    "jest.config.ts"
  ]
}
